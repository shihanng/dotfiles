{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "github-copilot/claude-sonnet-4.5",
  "mcp": {
    "memory": {
      "type": "local",
      "command": ["mcp-server-memory"],
      "enabled": true,
      "environment": {
        "MEMORY_FILE_PATH": "~/memory.json"
      }
    },
    "vectorcode-mcp-server": {
      "type": "local",
      "command": ["vectorcode-mcp-server"],
      "enabled": false
    },
    "context7": {
      "type": "local",
      "command": ["context7-mcp"],
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": ["serena", "start-mcp-server"],
      "enabled": false
    },
    "astro_doc": {
      "type": "remote",
      "url": "https://mcp.docs.astro.build/mcp",
      "enabled": false
    },
    "shadcn": {
      "type": "local",
      "command": ["shadcn", "mcp"],
      "enabled": false
    },
    "opentofu": {
      "type": "local",
      "command": ["opentofu-mcp-server"],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["mcp-server-sequential-thinking"],
      "enabled": true
    },
    "dbhub-postgres-npx": {
      "type": "local",
      "command": [
        "dbhub",
        "--transport",
        "stdio",
        "--dsn",
        "postgres://postgres@localhost:5432/postgres?sslmode=disable"
      ],
      "enabled": false
    },
    "chrome": {
      "type": "local",
      "command": ["chrome-devtools-mcp"],
      "enabled": false
    }
  },
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "zuban": {
      "command": ["zuban", "server"],
      "extensions": [".py", ".pyi"]
    }
  }
}
