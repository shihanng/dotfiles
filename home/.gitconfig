[include]
	path = ~/.gitconfig.local

[core]
	excludesfile = ~/.gitignore_global

[color]
	ui = auto

[commit]
	gpgsign = true

[tag]
	forceSignAnnotated = true

[url "git@github.com:"]
	insteadOf = https://github.com/

[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff

[difftool]
	prompt = false

# https://stackoverflow.com/a/50042202/6549460
[difftool "vimdiff"]
	cmd = vimdiff "$LOCAL" "$REMOTE"
